<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item 1: Background (if needed) -->
    <item android:drawable="@android:color/transparent" />

    <!-- Item 2: Line -->
    <item>
        <shape android:shape="line">
