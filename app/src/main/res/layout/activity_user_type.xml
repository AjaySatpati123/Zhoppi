<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserType">

    <Button
        android:id="@+id/chooseBuyer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#196E65"
        app:cornerRadius="0dp"
        android:text="@string/i_am_n_buyer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chooseSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chooseSeller"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="4dp"
        android:textSize="30sp"
        android:text="@string/i_am_nseller"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#FF4500"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />
</androidx.constraintlayout.widget.ConstraintLayout>